<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fr.wildcodeschool.wildquizz.TabInfosFragment">


    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/backwild"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="99dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_user2" />

            <TextView
                android:id="@+id/tv_username_fragment"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_profile"
                android:layout_marginStart="35dp"
                android:layout_marginTop="32dp"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_change_avatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/john_doe" />

            <Button
                android:id="@+id/button_test"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/manga_logo"
                android:textSize="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_score_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_profile"
                android:layout_marginStart="35dp"
                android:layout_marginTop="24dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_change_avatar"
                app:layout_constraintTop_toBottomOf="@+id/tv_username_fragment"
                tools:text="Score : 0" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username_fragment"
                android:layout_marginTop="18dp"
                android:text="@string/level"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_level">

                <ImageView
                    android:id="@+id/iv_medal1"
                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_level"
                    app:srcCompat="@drawable/badge_medal" />

                <ImageView
                    android:id="@+id/iv_medal2"
                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_medal1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_level"
                    app:srcCompat="@drawable/bronze_icon_medal" />

                <ImageView
                    android:id="@+id/iv_medal3"
                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_medal2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_level"
                    app:srcCompat="@drawable/silver_icon_medal" />

                <ImageView
                    android:id="@+id/iv_medal4"
                    android:layout_width="42dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    app:layout_constraintStart_toEndOf="@+id/iv_medal3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_level"
                    app:srcCompat="@drawable/gold_medal_icon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="65dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_level">

                <TextView
                    android:id="@+id/tv_pts1"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:gravity="center_horizontal"
                    android:text="@string/nb_points_50"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_medal1" />

                <TextView
                    android:id="@+id/tv_pts2"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:gravity="center_horizontal"
                    android:text="@string/nb_points_100"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_pts1"
                    app:layout_constraintTop_toBottomOf="@+id/iv_medal2" />

                <TextView
                    android:id="@+id/tv_pts3"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:gravity="center_horizontal"
                    android:text="@string/nb_points_150"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_pts2"
                    app:layout_constraintTop_toBottomOf="@+id/iv_medal3" />

                <TextView
                    android:id="@+id/tv_pts4"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:gravity="center_horizontal"
                    android:text="@string/nb_points_200"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tv_pts3"
                    app:layout_constraintTop_toBottomOf="@+id/iv_medal4" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="@string/average"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_below="@+id/tv_average"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:isIndicator="true"
                android:numStars="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_average"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/iv_change_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo_appareil_photo"
                app:layout_constraintStart_toEndOf="@+id/iv_profile"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</RelativeLayout>
