<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fr.wildcodeschool.wildquizz.TabInfosFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/backwild"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="99dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:layout_alignLeft="@+id/iv_medal1"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/iv_medal1"
                android:layout_marginStart="52dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/et_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_pts2"
                android:layout_alignStart="@+id/tv_pts2"
                android:layout_alignTop="@+id/iv_profile"
                android:layout_marginEnd="84dp"
                android:layout_marginTop="44dp"
                android:inputType="textPersonName"
                android:text="@string/john_doe"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_user"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/tv_pts2"
                android:layout_toStartOf="@+id/tv_pts2"
                android:text="@string/level"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile" />

            <ImageView
                android:id="@+id/iv_medal1"
                android:layout_width="42dp"
                android:layout_height="39dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_level"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/iv_medal2"
                android:layout_width="42dp"
                android:layout_height="39dp"
                android:layout_alignTop="@+id/iv_medal1"
                android:layout_marginStart="50dp"
                android:layout_marginTop="32dp"
                android:layout_toLeftOf="@+id/iv_medal3"
                android:layout_toStartOf="@+id/iv_medal3"
                app:layout_constraintStart_toEndOf="@+id/iv_medal1"
                app:layout_constraintTop_toBottomOf="@+id/tv_level"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/iv_medal3"
                android:layout_width="42dp"
                android:layout_height="39dp"
                android:layout_above="@+id/tv_pts2"
                android:layout_marginStart="50dp"
                android:layout_marginTop="32dp"
                android:layout_toEndOf="@+id/tv_score"
                android:layout_toRightOf="@+id/tv_score"
                app:layout_constraintStart_toEndOf="@+id/iv_medal2"
                app:layout_constraintTop_toBottomOf="@+id/tv_level"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_pts3"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_pts2"
                android:layout_alignBottom="@+id/tv_pts2"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:layout_toLeftOf="@+id/iv_medal4"
                android:layout_toStartOf="@+id/iv_medal4"
                android:gravity="center_horizontal"
                android:text="@string/nb_points_150"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_pts2"
                app:layout_constraintTop_toBottomOf="@+id/iv_medal3" />

            <ImageView
                android:id="@+id/iv_medal4"
                android:layout_width="42dp"
                android:layout_height="39dp"
                android:layout_alignTop="@+id/iv_medal3"
                android:layout_marginStart="50dp"
                android:layout_marginTop="32dp"
                android:layout_toEndOf="@+id/ratingBar"
                android:layout_toRightOf="@+id/ratingBar"
                app:layout_constraintStart_toEndOf="@+id/iv_medal3"
                app:layout_constraintTop_toBottomOf="@+id/tv_level"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_pts1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_pts2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/nb_points_50"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_medal1" />

            <TextView
                android:id="@+id/tv_pts2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_medal2"
                android:layout_alignStart="@+id/iv_medal2"
                android:layout_below="@+id/iv_medal2"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/nb_points_100"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_pts1"
                app:layout_constraintTop_toBottomOf="@+id/iv_medal2" />

            <TextView
                android:id="@+id/tv_pts4"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_pts3"
                android:layout_alignBottom="@+id/tv_pts3"
                android:layout_alignLeft="@+id/iv_medal4"
                android:layout_alignStart="@+id/iv_medal4"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/nb_points_200"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_pts3"
                app:layout_constraintTop_toBottomOf="@+id/iv_medal4" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pts3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="@string/score"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_pts1" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@+id/tv_score"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/tv_pts1"
                android:layout_toRightOf="@+id/tv_pts1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_score"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/iv_change_avatar"
                android:layout_width="23dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toEndOf="@+id/iv_profile"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</RelativeLayout>
